 * @author Brandon Vanhook
 */

class TextDatabase {

   public static function createRecord() {
     $my_file = 'data.txt';
     $handle = fopen($my_file, 'w') or die('Cannot open file:  '.$my_file);
     $data = 'username: buddy , password: lov123';
     fwrite($handle, $data);
     fclose($handle);
}

    public static function updateNewRecord(){
      $my_file = 'data.txt';
      $handle = fopen($my_file, 'a') or die('Cannot open file:  '.$my_file);
      $data = 'username: buddy , password: lov123';
      fwrite($handle, $data);
      $new_data = "\n".'username:Roscoe  , password: Worldpeace123';
      fwrite($handle, $new_data);
      fclose($handle);
   }


    public static function deleteNewRecord(){
        
      $my_file = 'data.txt';
      fwrite($data);
      unlink($my_file);
      fclose($data);
          
      echo ("user was successfully deleted"); 
    } 
 

    public static function loadNewRecord() {
       $my_file = 'data.txt';
       $handle = fopen($my_file, 'w') or die('Cannot open file:  '.$my_file);
    }
}
?>
